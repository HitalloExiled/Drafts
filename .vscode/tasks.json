{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks":
    [        
        {
            "taskName":       "build",
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", ".\\Workbench\\node_modules\\.bin\\tsc -p ./Workbench/tasks && node ./Workbench/tasks/build.js --dev"],
            "showOutput":     "always",
            "isBackground":   true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName":       "watch",
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "start .\\Workbench\\node_modules\\.bin\\tsc -p ./Workbench/tasks -w && start node ./Workbench/tasks/build.js --dev -w"],
            "showOutput":     "always",
            "isBackground":   true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName":       "build-webpack",
            "command":        "node",            
            "isShellCommand": true,
            "args":           ["./Workbench/tasks/build.js", "--dev"],
            "showOutput":     "always",
            "isBackground":   true
        },
        {
            "taskName":       "watch-webpack",
            "command":        "node",
            "isShellCommand": true,
            "args":           ["./Workbench/tasks/build.js", "--dev", "--watch"],
            "showOutput":     "always",
            "isBackground":   true
        },
        {
            "taskName":       "clean",
            "command":        "ts-node",            
            "isShellCommand": true,
            "args":           ["${workspaceRoot}/Workbench/tasks/clean.js"],
            "showOutput":     "always",
            "isBackground":   true,
            "options":
            {
                "cwd": "${workspaceRoot}/Workbench/node_modules/.bin"
            }
        }
    ]
}