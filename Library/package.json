{
  "name": "surfacer-drafts",
  "version": "0.0.4",
  "description": "Surfacer Library",
  "author": "HitalloExiled",
  "devDependencies": {
    "@types/node": "^7.0.4",
    "cpx": "^1.5.0",
    "rimraf": "^2.5.4",
    "ts-loader": "^2.0.0",
    "ts-node": "^2.0.0",
    "tslib": "^1.5.0",
    "typescript": "^2.2.0"
  },
  "dependencies": {
    "webpack": "^2.2.0"
  },
  "scripts":
  {
    "prepublish": "npm run build",
    "build": "npm run clean & tsc -p ./configs/tsconfig-es2015.json & ./configs/tsconfig-es2015.json --target es5 & npm run build:commonjs & npm run copy-files",
    "build:commonjs": "tsc -p ./configs/tsconfig-commonjs.json & tsc -p ./configs/tsconfig-commonjs.json --target es5",
    "clean": "rimraf ./build",
    "watch-es5": "tsc -p ./configs/tsconfig-es2015.json -watch",
    "watch-es6": "tsc -p ./configs/tsconfig-es2015.json -watch --target es5",
    "watch-all": "npm run watch-es5 | npm run watch-es6",
    "copy-files": "cpx ./source/**/*.{d.ts,html,css} ./build/surfacer-es5 && cpx ./source/**/*.{d.ts,html,css} ./build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HitalloExiled/Drafts.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HitalloExiled/Drafts/issues"
  },
  "homepage": "https://github.com/HitalloExiled/Drafts#readme"
}
