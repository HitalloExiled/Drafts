{
  "compilerOptions":
  {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict":                 true,
    "baseUrl":                      "./",
    "emitDecoratorMetadata":        true,
    "experimentalDecorators":       true,
    "importHelpers":                true,
    "lib":
    [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module":                         "es2015",
    "noEmit":                         true,
    "noEmitOnError":                  true,
    "noImplicitReturns":              true,
    "noImplicitThis":                 true,
    "noUnusedLocals":                 true,
    "paths":
    {
      "tslib":
      [
        "../node_modules/tslib/tslib.js"
      ]
    },
    //"sourceMap":                      true,
    "strictNullChecks":               true,
    "suppressImplicitAnyIndexErrors": true,
    "target":                         "es6",
    "typeRoots":
    [
      "../node_modules/@types"
    ]
  },
  "exclude": ["../node_modules"]
}