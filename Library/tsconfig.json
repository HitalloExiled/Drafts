{
  "compilerOptions":
  {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict":                 true,
    "baseUrl":                      "./source",
    "emitDecoratorMetadata":        true,
    "experimentalDecorators":       true,
    "importHelpers":                true,
    "lib":
    [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module":                         "es2015",
    "moduleResolution":               "node",
    "noEmit":                         true,
    "noEmitOnError":                  true,
    "noImplicitReturns":              true,
    "noImplicitThis":                 true,
    "noUnusedLocals":                 true,
    "strictNullChecks":               true,
    "suppressImplicitAnyIndexErrors": true,
    "target":                         "es6",
    "typeRoots":
    [
      "node_modules/@types"
    ]
  }
}