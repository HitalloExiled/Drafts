{
  //"compileOnSave": true,
  "compilerOptions":
  {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict":                 true,
    "baseUrl":                      "./",
    "emitDecoratorMetadata":        true,
    "experimentalDecorators":       true,
    //"inlineSources": true,
    //"inlineSourceMap":              true,
    "importHelpers":                true,
    "lib":
    [
      "dom",
      "es2015",
      "es2016"
    ],
    "module":            "es2015",
    "moduleResolution":  "node",
    //"noEmit":            false,
    "noEmitOnError":     true,
    "noImplicitReturns": true,
    "noImplicitThis":    true,
    "noUnusedLocals":    true,
    "paths":
    {
      "*":
      [
        "*",
        //"./libraries/es5/*",
        //"./libraries/es6/*",
        "../node_modules/surfacer-drafts/build/es5/*"
      ],
      "tslib":
      [
        "../node_modules/tslib/tslib.js"
      ]
    },
    "sourceMap":                      true,
    //"strictNullChecks":               true,
    "suppressImplicitAnyIndexErrors": true,
    "target":                         "es5",
    "typeRoots":
    [
      "../node_modules/@types"
    ]
  },
  "include":
  [
    "./",
    "../node_modules/surfacer-drafts"
  ],
  "exclude": ["./libraries/es6"]
}