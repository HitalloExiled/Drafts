{
  "compilerOptions":
  {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict":                 true,
    "baseUrl":                      "./",
    "emitDecoratorMetadata":        true,
    "experimentalDecorators":       true,
    "importHelpers":                true,
    "noEmitHelpers":                true,
    "lib":
    [
      "dom",
      "es2015",
      "es2016"
    ],
    "module":                         "commonjs",
    "moduleResolution":               "node",
    "noEmitOnError":                  true,
    "noImplicitReturns":              true,
    "noImplicitThis":                 true,
    "noUnusedLocals":                 true,
    "paths":
    {
      "surfacer/*": ["node_modules/surfacer-es5/*"]
    },
    "sourceMap":                      true,
    "strictNullChecks":               true,
    "suppressImplicitAnyIndexErrors": true,
    "target":                         "es6",
    "typeRoots":
    [
      "node_modules/@types",
      "node_modules/surfacer-es5/surfacer/@types"
    ]
  },
  "exclude": ["node_modules"]
}